{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Goml",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#elements"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#errors"
		}
	],
	"repository": {
		"errors": {
			"patterns": [
				{
					"comment": "invalid characters",
					"match": "\\,",
					"name":"invalid.illegal.goss"
				}
			]
		},

		"elements": {
			"patterns": [
				{
					"comment": "element",
					"match": "<[a-zA-Z_][a-zA-Z0-9_]*(\\s|>|\\/)|>|<\\/>|\\/>",
					"name": "entity.name.function.goml"
				},
				{
					"comment": "template",
					"match": "<![a-zA-Z_][a-zA-Z0-9_]*>|<!\\/>",
					"name":"variable.name.goss"
				}
			]
		},

		"comments":{
			"patterns": [
				{
					"comment": "comments",
					"begin": "<#>",
					"beginCaptures": {
						"0":{
							"name":"comment.block.start.goss"		
						}
					},
					"end": "<#>",
					"endCaptures": {
						"0":{
							"name":"comment.block.end.goss"		
						}
					},
					"name": "comment.block.goss"
				}
			]
		},

		"strings":{
			"patterns": [{
				"comment": "Raw string literals",
				"begin": "\"",
				"beginCaptures": {
					"0": {
						"name": "punctuation.definition.string.begin.goss"
					}
				},
				"end": "\"",
				"endCaptures": {
					"0": {
						"name": "punctuation.definition.string.end.goss"
					}
				},
				"name": "string.quoted.raw.goss"
			}]
		}
	},
	"scopeName": "source.goml"
}